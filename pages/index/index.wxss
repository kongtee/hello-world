/**index.wxss**/
.header {
  background-color: #fff;
  margin: 0;
  padding: 0;
  width: 750rpx;
  height: 850rpx;
}

.header .header-img-wrap {
  width: 750rpx;
  height: 750rpx;
}

.header .header-img {
  width: 100%;
  height: 100%;
}

.header .banner-container {
  width: 690rpx;
  height: 450rpx;
  box-shadow: 0 2rpx 5rpx #adadad;
  margin: -350rpx 30rpx 0;
  background-color: #fff;
  position: absolute;
  border-radius: 10rpx;
}

.header .banner-title {
  font-size: 12px;
  color: #555;
  text-align: center;
  margin: 10px 0;
}

.header .slide-wrap {
  height: 360rpx;
}

.header .slide-image {
  width: 620rpx;
  height: 360rpx;
  margin: 0 30rpx;
}

.main {
  width: 100%;
}

.main .catogary {
  margin: 20px auto;
  font-size: 16px;
  text-align: center;
  width: 500rpx;
}

.main .catogary .catogary-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main .catogary .split {
  width: 70px;
  height: 1px;
  background-color: #DC143C;
  margin: 0 10px;
}

.main .catogary .title {
  width: 100px;
}

.main .catogary .catogary-icon {
  text-align: center;
  color: #DC143C;
  font-size: 10px;
}

.main .pic-list {
  background-color: #f5f5f5;
}

.main .pic-list .zhubo-item{
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: #fff;
  margin: 0 0 10px;
  padding: 0;
  height: 290px;
}

.main .pic-list .zhubo-container {
  margin: 0 10px;
  height: 250px;
}

.main .pic-list .zhubo-bigpic{
  border-radius: 5px;
  width: 100%;
}

.main .pic-list .zhubo-info{
  display: flex;
  align-items: flex-start;
}
.main .pic-list .zhubo-icon{
  width: 30px;
  height: 30px;
  margin: 0 10px;
}
.main .pic-list .zhubo-icon-img{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.main .pic-list .zhubo-desc{
  color: #555;
  font-size: 12px;
  display: flex;
  align-items: flex-end;
  height: 30px;
}